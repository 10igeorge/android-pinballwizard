<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_weight="0.06">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:id="@+id/eventStartDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="2016-04-01"/>

            <TextView
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:id="@+id/eventEndDate"
                android:layout_below="@+id/eventStartDate"
                android:layout_alignParentRight="true"
                android:text="2016-12-31"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventName"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Event Name"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:text="POP SuperLeague is a new kind of casual pinball league that anyone can take part in and play on their own schedule. Here is how it works.\n\nThe first Monday of the month, POP HQ will publish the six games that make up the SuperLeague that week.\n\nGo to POP HQ anytime during normal business hours an...\n4605 Northeast Fremont Street, Portland, OR, "
                android:id="@+id/eventDescription"
                android:layout_below="@+id/eventName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>



    </LinearLayout>
</LinearLayout>